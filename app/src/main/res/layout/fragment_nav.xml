<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.jaygege.smartx.widget.verticaltablayout.VerticalTabLayout
            android:id="@+id/navigation_page_vertical_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/deep_grey"
            app:indicator_color="@color/white"
            app:indicator_gravity="fill"
            app:tab_height="50dp"
            app:tab_margin="15dp"
            app:tab_mode="scrollable" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/common_line" />

        <com.jaygege.smartx.widget.VerticalViewPager
            android:id="@+id/navigation_page_view_pager"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3" />

    </LinearLayout>
</RelativeLayout>